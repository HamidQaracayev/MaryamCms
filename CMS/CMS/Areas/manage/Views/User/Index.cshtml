﻿
@model List<User>;

@{
    int counter = 0;
}
<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between">
        <h1>User Datas</h1>
        <a class="btn btn-primary" style="width:100px;" asp-action="Create" asp-controller="User">Add</a>
    </div>

    <table class="table table-hover table-striped mt-3 shadow">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">FullName</th>
                <th scope="col">UserCode</th>
                <th scope="col">Category</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@item.FullName</td>
                    <td>@item.UserCode</td>
                    <td>@item.Category.Name</td>
                    <td>
                        
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="User" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>